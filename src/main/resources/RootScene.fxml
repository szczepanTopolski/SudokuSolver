<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codecool.FxControllers.RootSceneController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                        <MenuItem mnemonicParsing="false" onAction="#findCsvBoard" text="Add sudoku board from Csv File" />
                        <MenuItem id="solve" mnemonicParsing="false" onAction="#solveSudoku" text="Solve sudoku" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </VBox>
   </top>
   <left>
      <VBox id="boardVbox" fx:id="boardVbox" prefHeight="100.0" prefWidth="300.0" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <content>
            <VBox id="solvedGridsVbox" fx:id="solvedGridsVbox" prefHeight="200.0" prefWidth="100.0" />
         </content></ScrollPane>
   </center>
   <right>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Text id="ThreadCounter" fx:id="ThreadCounter" strokeType="OUTSIDE" strokeWidth="0.0" />
            <Text id="timer" fx:id="timer" strokeType="OUTSIDE" strokeWidth="0.0" />
         </children>
      </VBox>
   </right>
</BorderPane>
